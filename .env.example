# Database Configuration
DATABASE_URL="file:./data/youtube-sync.db"

# YouTube API Configuration
# Setup Guide: https://console.cloud.google.com/
#
# OPTION 1: OAuth 2.0 (Recommended - Full Features)
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Desktop app or Web application)
# 3. Download credentials and copy Client ID & Secret
# 4. Run: npm run cli -- auth
# 5. Follow OAuth flow and save tokens below
YOUTUBE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback

# OAuth Tokens (Generated by: npm run cli -- auth-callback <code>)
# These tokens are obtained after completing the OAuth flow
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=

# OPTION 2: API Key (Limited - Read-only, No User Data)
# Only use if you don't need OAuth features
# Enable YouTube Data API v3 and create an API key
YOUTUBE_API_KEY=

# Google Gemini API Configuration (Phase 2: Video Summarization)
# Get your API key at: https://aistudio.google.com/app/apikey
# Required for: AI-powered video summarization feature
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash  # Optional, defaults to gemini-pro
                                # Available models: gemini-pro, gemini-2.0-flash, gemini-2.5-flash, gemini-1.5-flash

# Encryption
# Generate a random 32-byte hex string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_SECRET=your_64_character_hex_string_here

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info

# Paths
CACHE_DIR=./cache
LOG_DIR=./logs
DATA_DIR=./data

# Sync Configuration
DEFAULT_SYNC_INTERVAL=3600000  # 1 hour in milliseconds
MAX_CONCURRENT_SYNCS=5
RETRY_ATTEMPTS=3
BACKOFF_MULTIPLIER=2

# YouTube API Quota
DAILY_QUOTA_LIMIT=10000
QUOTA_WARNING_THRESHOLD=9000  # 90% of daily limit

# API Server Configuration
API_PORT=3000
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute
RATE_LIMIT_WHITELIST=
RATE_LIMIT_AUTH_LOGIN=10
RATE_LIMIT_AUTH_REGISTER=5
RATE_LIMIT_AUTH_REFRESH=20

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# YouTube API Quota Tracking
YOUTUBE_QUOTA_LIMIT=10000
